@model School_CRUD.Models.Degree

@{
    ViewData["Title"] = "Delete Degree";
}

<h1>Delete Degree</h1>

<div>
    <h4>Degree</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Id
        </dt>
        <dd class="col-sm-10">
            @Model.Id
        </dd>
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Teacher
        </dt>
        <dd class="col-sm-10">
            @if (Model.Teacher != null)
            {
                <input type="text" class="form-control" value="@Model.Teacher.Name @Model.Teacher.LastName" disabled />
            }
            else
            {
                <input type="text" class="form-control" value="No teacher assigned" disabled />
            }
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
